{
  "name": "@k-platform/core",
  "author": "Alexander Kiriliuk",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexander-kiriliuk/k-platform-core"
  },
  "publishConfig": {
    "access": "public"
  },
  "version": "0.9.2",
  "description": "Framework for the rapid development of modern applications",
  "keywords": [
    "nodejs framework",
    "javascript framework",
    "scalable platform",
    "rapid application development",
    "database management",
    "typeorm integration",
    "crud generator",
    "data import export",
    "background processes",
    "cron jobs",
    "media files management",
    "role-based access control",
    "oauth 2.0",
    "authentication",
    "authorization",
    "captcha",
    "configuration management",
    "dynamic configuration",
    "angular admin panel",
    "node.js",
    "redis",
    "postgres",
    "mysql",
    "typescript"
  ],
  "main": "./dist/core/lib/index.js",
  "types": "./dist/core/lib/index.d.ts",
  "exports": "./dist/core/lib/index.js",
  "workspaces": [
    "examples/*"
  ],
  "engines": {
    "node": ">=18.20.3",
    "npm": ">=10.7.0"
  },
  "scripts": {
    "init:config": "nest start init-config",
    "build": "rimraf dist/core && tsc -p lib/tsconfig.lib.json",
    "create:tar": "node ./create-pack-list.js",
    "publish": "npm publish ./dist/package.tgz",
    "init:web-app": "npm run init:config && nest start init-web-app",
    "start:web-app": "rimraf dist/examples/web-server && nest start web-app --debug --watch",
    "lint": "eslint --fix --ext .js,.ts .",
    "docs:build": "npx compodoc -c compodoc.json",
    "docs:serve": "npx compodoc -c compodoc.json -s -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config web/test/jest-e2e.json"
  },
  "peerDependencies": {
    "@nestjs/axios": "3.*",
    "@nestjs/common": "10.*",
    "@nestjs/core": "10.*",
    "@nestjs/jwt": "10.*",
    "@nestjs/microservices": "10.*",
    "@nestjs/passport": "10.*",
    "@nestjs/schedule": "4.*",
    "adm-zip": "0.5.*",
    "axios": "1.*",
    "bcrypt": "5.*",
    "canvas": "2.11.*",
    "class-transformer": "0.5.*",
    "class-validator": "0.14.*",
    "dotenv": "16.*",
    "exifreader": "4.*",
    "ffprobe": "1.*",
    "ffprobe-static": "3.*",
    "file-type": "19.*",
    "heic-convert": "2.*",
    "imagemin": "7.*",
    "imagemin-mozjpeg": "9.*",
    "imagemin-pngquant": "9.*",
    "ioredis": "5.*",
    "music-metadata": "7.*",
    "node-redis-warlock": "1.*",
    "object-hash": "3.*",
    "reflect-metadata": "0.2.*",
    "rxjs": "7.*",
    "sharp": "0.33.*",
    "typeorm": "0.3.*",
    "uuid": "9.*",
    "xml2js": "0.6.*"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.25",
    "@nestjs/cli": "10.4.4",
    "@nestjs/schematics": "10.1.4",
    "@nestjs/testing": "10.4.1",
    "@nestjs/typeorm": "10.0.2",
    "@npmcli/arborist": "7.5.1",
    "@types/adm-zip": "0.5.5",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "1.4.11",
    "@types/node": "20.12.2",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "fs-extra": "11.2.0",
    "glob": "10.4.1",
    "jest": "29.7.0",
    "npm-packlist": "8.0.2",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "tar": "7.0.1",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "coveragePathIgnorePatterns": [
      ".mock.ts",
      ".e2e-spec.ts",
      ".module.ts",
      ".entity.ts",
      ".subscriber.ts",
      "main.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/"
    ]
  }
}

{
  "name": "k-platform-core",
  "version": "0.0.1",
  "description": "",
  "author": "Alexander Kiriliuk",
  "license": "Apache-2.0",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "init:config": "nest start init-config",
    "start:config": "nest start config",
    "start:config:dev": "nest start config --watch",
    "start:config:debug": "nest start config --debug --watch",
    "start:composer": "nest start composer",
    "start:composer:dev": "nest start composer --watch",
    "start:composer:debug": "nest start composer --debug --watch",
    "start:composer:prod": "node dist/apps/composer/src/main",
    "start:auth": "nest start auth",
    "start:auth:dev": "nest start auth --watch",
    "start:auth:debug": "nest start auth --debug --watch",
    "start:auth:prod": "node dist/apps/auth/src/main",
    "start:captcha": "nest start captcha",
    "start:captcha:dev": "nest start captcha --watch",
    "start:captcha:debug": "nest start captcha --debug --watch",
    "start:captcha:prod": "node dist/apps/captcha/src/main",
    "start:user": "nest start user",
    "start:user:dev": "nest start user --watch",
    "start:user:debug": "nest start user --debug --watch",
    "start:user:prod": "node dist/apps/user/src/main",
    "start:media": "nest start media",
    "start:media:dev": "nest start media --watch",
    "start:media:debug": "nest start media --debug --watch",
    "start:media:prod": "node dist/apps/media/src/main",
    "start:file": "nest start file",
    "start:file:dev": "nest start file --watch",
    "start:file:debug": "nest start file --debug --watch",
    "start:file:prod": "node dist/apps/file/src/main",
    "start:explorer": "nest start explorer",
    "start:explorer:dev": "nest start explorer --watch",
    "start:explorer:debug": "nest start explorer --debug --watch",
    "start:explorer:prod": "node dist/apps/explorer/src/main",
    "start:xml-data-bridge": "nest start xml-data-bridge",
    "start:xml-data-bridge:dev": "nest start xml-data-bridge --watch",
    "start:xml-data-bridge:debug": "nest start xml-data-bridge --debug --watch",
    "start:xml-data-bridge:prod": "node dist/apps/xml-data-bridge/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/auth/test/jest-e2e.json"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "9.0.5",
    "@nestjs/common": "10.0.3",
    "@nestjs/core": "10.0.3",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/microservices": "10.0.3",
    "@nestjs/passport": "10.0.0",
    "@nestjs/platform-express": "10.0.3",
    "bcrypt": "5.1.0",
    "canvas": "2.11.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "16.3.1",
    "helmet": "7.0.0",
    "imagemin": "7.0.1",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-pngquant": "8.0.0",
    "ioredis": "5.3.2",
    "jwt-simple": "0.5.6",
    "multer": "1.4.5-lts.1",
    "object-hash": "3.0.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pg": "8.11.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "sharp": "0.32.1",
    "typeorm": "0.3.17",
    "uuid": "9.0.0",
    "xml2js": "0.6.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.0.3",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.0.3",
    "@nestjs/typeorm": "10.0.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "18.15.3",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "prettier": "2.8.8",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/apps/config/$1",
      "^@shared/(.*)$": "<rootDir>/apps/shared/$1",
      "^@user/(.*)$": "<rootDir>/apps/user/$1",
      "^@media/(.*)$": "<rootDir>/apps/media/$1",
      "^@file/(.*)$": "<rootDir>/apps/file/$1",
      "^@xml-data-bridge/(.*)$": "<rootDir>/apps/xml-data-bridge/$1",
      "^@explorer/(.*)$": "<rootDir>/apps/explorer/$1",
      "^@composer/(.*)$": "<rootDir>/apps/composer/$1",
      "^@auth/(.*)$": "<rootDir>/apps/auth/$1",
      "^@captcha/(.*)$": "<rootDir>/apps/captcha/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
